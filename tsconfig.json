{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "outDir": "./public/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnusedLabels": true,
        "pretty": true,
        "removeComments": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "public",
        "typings"
    ]
}
