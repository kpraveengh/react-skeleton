{
  "compilerOptions": {
     "target": "es6",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "esnext"
    ],
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*"
      ],
    }
  },
  "exclude": ["node_modules"]
}